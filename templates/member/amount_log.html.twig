<div class="content-padded">
    <div class="row">
        <div class="col-33">时间</div>
        <div class="col-33">备注</div>
        <div class="col-33">金额</div>
    </div>
    {% for log in amountLog %}
        {% if log.logType == 1 or log.logType == 2 %}
            <div class="row">
                <div class="col-33">{{ log.changeTime | date('Y-m-d H:i:s') }}</div>
                <div class="col-33">{{ log.changeReason }}</div>
                <div class="col-33">{{ log.amount }}</div>
            </div>
        {% endif %}
    {% endfor %}
</div>