{% extends 'base.html.twig' %}

{% block header %}
    <header class="bar bar-nav">
        <h1 class="title">商品列表</h1>
    </header>
{% endblock %}

{% block body %}
    <div class="content">
        <img src="http://bhyulong.cn/data/afficheimg/1544398904074110399.jpg" width="100%" />
        <div class="content-padded">
            <div class="row">
                <div class="col-100 searchbar">
                    <a class="searchbar-cancel">取消</a>
                    <div class="search-input">
                        <label class="icon icon-search" for="search"></label>
                        <input type="search" id="search" placeholder="输入关键字...">
                    </div>
                </div>
            </div>
        </div>

        <div class="buttons-tab">
            <a href="#tab1" class="tab-link button">综合</a>
            <a href="#tab2" class="tab-link button">人气</a>
            <a href="#tab3" class="tab-link button">销量</a>
            <a href="#tab4" class="tab-link button">价格</a>
        </div>

        {% set goodes = category.goods %}
        <div class="tabs">
            <div id="tab1" class="tab">
                {% for goods in goodes  %}
                <div class="content-block">
                    {{ goods.name }}
                </div>
                {% endfor %}
            </div>
            <div id="tab2" class="tab">
                {% set rgoods = goodes|object_sort('sorter') %}
                {% for goods in rgoods  %}
                    <div class="content-block">
                        <p>{{ goods.name }}</p>
                    </div>
                {% endfor %}
            </div>
            <div id="tab3" class="tab">
                {% set sgoods = goodes|object_sort('sale','DESC') %}
                {% for goods in sgoods  %}
                <div class="content-block">
                    <p>{{ goods.name }}</p>
                </div>
                {% endfor %}
            </div>
            <div id="tab4" class="tab">
                {% set pgoods = goodes|object_sort('price') %}
                {% for goods in pgoods  %}
                    <div class="content-block">
                        <p>{{ goods.name }}</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
