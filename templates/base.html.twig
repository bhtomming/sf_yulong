<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{% block title %}我的生活{% endblock %}</title>
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    <link rel="shortcut icon" href="/favicon.ico">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="format-detection" content="telephone=no">
{% block stylesheets %}
    <link rel="stylesheet" href="//g.alicdn.com/msui/sm/0.6.2/css/sm.min.css">
    <link rel="stylesheet" href="//g.alicdn.com/msui/sm/0.6.2/css/sm-extend.min.css">
    {{ encore_entry_link_tags("app") }}
{% endblock %}
</head>
<body>
<div class="page-group">
    <div class="page">
        {% block header %}{% endblock %}
        {% block body %}
        <div class="content">
        </div>
    {% endblock %}
    {% block navigation %}
        <nav class="bar bar-tab">
            <a class="tab-item external active" href="{{ path("home_page") }}">
                <span class="icon icon-home"></span>
                <span class="tab-label">首页</span>
            </a>
            <a class="tab-item external" href="{{ path("hot_sale") }}">
                <span class="icon icon-app"></span>
                <span class="tab-label">热卖</span>
            </a>
            <a class="tab-item external" href="{{ path("member_sale_link") }}">
                <span class="icon icon-share"></span>
                <span class="tab-label">分销</span>
            </a>
            <a class="tab-item external" href="{{ path("member_center") }}">
                <span class="icon icon-me"></span>
                <span class="tab-label">我的</span>
            </a>
            <a class="tab-item external" href="javascript:ttkefuyaoqing.startchats()" external>
                <span class="icon icon-emoji"></span>
                <span class="tab-label">客服</span>
            </a>
        </nav>
    {% endblock %}
    </div>
    {% block javascripts %}
        <script type='text/javascript' src='//g.alicdn.com/sj/lib/zepto/zepto.js' charset='utf-8'></script>
        <script type='text/javascript' src='//g.alicdn.com/msui/sm/0.6.2/js/sm.js' charset='utf-8'></script>
        {{ encore_entry_script_tags("app") }}
    {% endblock %}
    <script>
        $.init();
        $.config = {router: false};
    </script>
</div>
</body>
</html>